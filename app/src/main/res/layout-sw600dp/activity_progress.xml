<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#030000"
    tools:context=".ProgressActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="300dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="385dp"
                android:layout_height="0dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="PROGRESS"
                android:textColor="@android:color/holo_red_light"
                android:textSize="60sp"
                app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/animalPercent"
                android:layout_width="0dp"
                android:layout_height="92dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="450dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="450dp"
                android:layout_marginTop="28dp"
                android:gravity="left|center"
                android:textColor="@android:color/white"
                android:textSize="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView
                android:id="@+id/colorPercent"
                android:layout_width="0dp"
                android:layout_height="92dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="450dp"
                android:layout_marginRight="50dp"
                android:layout_marginStart="450dp"
                android:layout_marginTop="8dp"
                android:gravity="left|center"
                android:textColor="@android:color/white"
                android:textSize="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/animalPercent" />

            <TextView
                android:id="@+id/fruitPercent"
                android:layout_width="0dp"
                android:layout_height="92dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="450dp"
                android:layout_marginRight="50dp"
                android:layout_marginStart="450dp"
                android:layout_marginTop="8dp"
                android:gravity="left|center"
                android:textColor="@android:color/white"
                android:textSize="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/colorPercent" />

            <TextView
                android:id="@+id/flagPercent"
                android:layout_width="0dp"
                android:layout_height="92dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="450dp"
                android:layout_marginRight="50dp"
                android:layout_marginStart="450dp"
                android:layout_marginTop="8dp"
                android:gravity="left|center"
                android:textColor="@android:color/white"
                android:textSize="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fruitPercent" />

            <TextView
                android:id="@+id/roadsignPercent"
                android:layout_width="0dp"
                android:layout_height="92dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="450dp"
                android:layout_marginRight="50dp"
                android:layout_marginStart="450dp"
                android:layout_marginTop="8dp"
                android:gravity="left|center"
                android:textColor="@android:color/white"
                android:textSize="40sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/flagPercent" />

            <TextView
                android:id="@+id/symbolPercentt"
                android:layout_width="0dp"
                android:layout_height="92dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="450dp"
                android:layout_marginRight="50dp"
                android:layout_marginStart="450dp"
                android:layout_marginTop="8dp"
                android:gravity="left|center"
                android:textColor="@android:color/white"
                android:textSize="40sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/roadsignPercent" />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</RelativeLayout>