<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper"
    tools:context=".MainActivity">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="296dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10sp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <Button
            android:id="@+id/quiz"
            android:layout_width="800dp"
            android:layout_height="60dp"
            android:background="@drawable/homepage_button_back"
            android:cursorVisible="false"
            android:onClick="quiz"
            android:text="quiz"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="normal|italic"
            app:layout_constraintBottom_toTopOf="@+id/progress"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/learn" />

        <Button
            android:id="@+id/learn"
            android:layout_width="800dp"
            android:layout_height="60dp"
            android:layout_marginTop="26dp"
            android:background="@drawable/homepage_button_back"
            android:onClick="learn"
            android:padding="10dp"
            android:text="learn"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="normal|italic"
            app:layout_constraintBottom_toTopOf="@+id/quiz"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/progress"
            android:layout_width="800dp"
            android:layout_height="60dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/homepage_button_back"
            android:cursorVisible="false"
            android:onClick="progress"
            android:padding="0dp"
            android:text="progress"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="normal|italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/quiz" />
    </android.support.constraint.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="724dp"
        android:layout_height="184dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        app:srcCompat="@drawable/homepagelogo" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/profile"
        android:layout_alignParentRight="true" />


</RelativeLayout>