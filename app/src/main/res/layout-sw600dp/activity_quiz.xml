<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/animal_quiz"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".Animal_QuizActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/theEnd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:visibility="invisible">

        <TextView
            android:id="@+id/scoreText"
            android:layout_width="match_parent"
            android:layout_height="106dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="SCORE"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="70dp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/percentage"
            android:layout_width="0dp"
            android:layout_height="166dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:textColor="#3cffa1"
            android:textSize="55sp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scoreText" />

        <TextView
            android:id="@+id/finalPoints"
            android:layout_width="0dp"
            android:layout_height="66dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:textColor="#00ec37"
            android:textSize="45sp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/percentage" />

        <TextView
            android:id="@+id/wrongPoint"
            android:layout_width="0dp"
            android:layout_height="74dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:textColor="#eb0808"
            android:textSize="45sp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/finalPoints" />

        <Button
            android:id="@+id/homePage"
            android:layout_width="243dp"
            android:layout_height="64dp"
            android:layout_alignEnd="@+id/wrongPoint"
            android:layout_alignTop="@+id/retry"
            android:layout_marginEnd="140dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="140dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/home_button_quiz"
            android:text="Home"
            android:textColor="@android:color/white"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.785"
            app:layout_constraintStart_toEndOf="@+id/retry"
            tools:layout_editor_absoluteY="498dp" />

        <Button
            android:id="@+id/retry"
            android:layout_width="200dp"
            android:layout_height="64dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/wrongPoint"
            android:layout_marginBottom="140dp"
            android:layout_marginLeft="252dp"
            android:layout_marginStart="252dp"
            android:background="@drawable/roundbutton"
            android:text="RETRY"
            android:textColor="@android:color/white"
            android:textSize="40sp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:visibility="visible">

        <Button
            android:id="@+id/go"
            android:layout_width="319dp"
            android:layout_height="147dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/roundbutton"
            android:text="Start"
            android:textColor="@android:color/white"
            android:textSize="70sp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/mainQuestionPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:visibility="invisible">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="456dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="225dp" />

        <TextView
            android:id="@+id/outcome"
            android:layout_width="422dp"
            android:layout_height="81dp"
            android:layout_alignTop="@+id/score"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/score"
            android:layout_width="76dp"
            android:layout_height="64dp"
            android:layout_below="@+id/question"
            android:layout_marginStart="-86dp"
            android:layout_toEndOf="@+id/textView4"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingTop="2dp"
            android:text="0"
            android:textColor="@android:color/white"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="What is shown below?"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="115dp"
            android:layout_height="65dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/outcome"
            android:layout_marginEnd="86dp"
            android:gravity="center"
            android:text="Score:"
            android:textColor="#f93838"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/timer"
            android:layout_width="140dp"
            android:layout_height="79dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/question"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="0s"
            android:textColor="@android:color/white"
            android:textSize="50sp" />

        <ImageView
            android:id="@+id/questionImage"
            android:layout_width="444dp"
            android:layout_height="299dp"
            android:layout_above="@+id/progressBar"
            android:layout_centerHorizontal="true"
            android:src="@drawable/cat" />

        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="206dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:padding="10dp"
            android:visibility="visible">

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/quiz_options"
                android:onClick="chooseAnswer"
                android:paddingBottom="10dp"
                android:paddingRight="5dp"
                android:text="Button"
                android:textColor="@android:color/black"
                android:textSize="26sp"
                app:layout_column="0"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_row="0"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/quiz_options"
                android:onClick="chooseAnswer"
                android:text="Button"
                android:textColor="@android:color/black"
                android:textSize="26sp"
                app:layout_column="1"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_row="0"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/quiz_options"
                android:onClick="chooseAnswer"
                android:text="Button"
                android:textColor="@android:color/black"
                android:textSize="26sp"
                app:layout_column="0"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_row="1"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/quiz_options"
                android:onClick="chooseAnswer"
                android:text="Button"
                android:textColor="@android:color/black"
                android:textSize="26sp"
                app:layout_column="1"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                app:layout_row="1"
                app:layout_rowWeight="1" />
        </android.support.v7.widget.GridLayout>


    </RelativeLayout>

</RelativeLayout>